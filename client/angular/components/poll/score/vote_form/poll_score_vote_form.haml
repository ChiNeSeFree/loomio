%form.poll-score-vote-form{ng-submit: "submit()"}
  %poll_common_participant_form{stance: "stance"}

  %h3.lmo-card-subheading{translate: "poll_common.your_response"}
  .lmo-hint-text
    .poll-score-vote-form__too-many-dots{ng-if: "tooManyDots()", translate: "poll_score_vote_form.too_many_dots"}
    .poll-score-vote-form__dots-remaining{ng-if: "!tooManyDots()", translate: "poll_score_vote_form.dots_remaining", translate-value-count: "{{dotsRemaining()}}"}
  %md-list.poll-common-vote-form__options
    %md-list-item.poll-score-vote-form__option.poll-common-vote-form__option{ng-repeat: "choice in stanceChoices track by choice.poll_option_id"}
      %md-slider-container.poll-score-vote-form__input-container
        %p.poll-score-vote-form__chosen-option--name.poll-common-vote-form__border-chip.poll-common-bar-chart__bar{ng-style: "styleData(choice)"} {{ optionFor(choice).name }}
        .poll-score-vote-form__score-slider-field
          %md-slider.poll-score-vote-form__score-slider{min: "0", max: "255", ng-model: "color.red", aria-label: "red"}
          -# <md-slider min="0" max="255" ng-model="color.red" aria-label="red" id="red-slider"
          -#            class="md-warn">
          -# </md-slider>
            -# <md-input-container>
            -#   <input type="number" ng-model="color.red" aria-label="red" aria-controls="red-slider">
            -# </md-input-container>
  %validation_errors{subject: "stance", field: "stanceChoices"}

  %poll_common_stance_reason{stance: "stance"}

  .poll-common-form-actions.lmo-flex.lmo-flex__space-between
    %show_results_button{ng-if: "stance.isNew()"}
    %div{ng-if: "!stance.isNew()"}
    %md-button.md-primary.md-raised.poll-common-vote-form__submit{type: "submit", ng-disabled: "tooManyDots()", translate: "poll_common.vote", aria-label: "{{ 'poll_poll_vote_form.vote' | translate }}"}
